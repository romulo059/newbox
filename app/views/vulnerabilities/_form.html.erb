<%= form_with(model: vulnerability, local: true) do |form| %>
  <% if vulnerability.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(vulnerability.errors.count, "error") %> prohibited this vulnerability from being saved:</h2>

      <ul>
      <% vulnerability.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <b><%= form.label :name %></b>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <b><%= form.label :description %></b>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <b><%= form.label :criticality %></b>
    <%= form.text_field :criticality %>
  </div>

  <div class="field">
    <b><%= form.label :solution %></b>
    <%= form.text_field :solution %>
  </div>

  <div class="field">
    <b><%= form.label :cvss_score %></b>
    <%= form.number_field :cvss_score %>
  </div>

  <div class="field">
    <b><%= form.label :asset %></b>
    <%= form.select("asset_id", Asset.all.collect {|a| [a.description, a.id ]}, {include_blank: "Select..." }  )%>
  </div>

<br>
  <div class="actions">
    <%= form.submit :class=> 'white-text waves-effect waves-light btn' %>
  </div>
<% end %>
